{
  "version": 2,
  "env": {
    "MONGO_DB_URI": "@MONGO_DB_URI",
    "JWT_SECRET_KEY": "@JWT_SECRET_KEY"
  },
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ]
    }
  ]
}